{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "screens": "./src/screens",
          "common": "./src/common",
          "assets": "./src/assets",
          "navigation": "./src/navigation",
          "container": "./src/container",
          "components": "./src/components",
          "__tests__": "./__tests__"
        }
      }
    ]
  ],
  "env": {
    "production": {
      "plugins": ["react-native-paper/babel"]
    }
  }
}
